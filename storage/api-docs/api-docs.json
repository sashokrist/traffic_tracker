{
    "openapi": "3.0.0",
    "info": {
        "title": "Visits tracker System API",
        "version": "v1"
    },
    "paths": {
        "/api/track": {
            "get": {
                "tags": [
                    "Visits"
                ],
                "summary": "Track a page visit",
                "description": "Tracks visits and logs them with geo location",
                "operationId": "trackVisit",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Full page URL",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Visit logged successfully"
                    },
                    "400": {
                        "description": "Missing or invalid page parameter"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/dashboard": {
            "get": {
                "tags": [
                    "Dashboard"
                ],
                "summary": "Get visit statistics for dashboard",
                "description": "Returns unique and all visit data within the selected time range",
                "operationId": "a92dff3ea055c0a594f425e852840a68",
                "parameters": [
                    {
                        "name": "from",
                        "in": "query",
                        "description": "Start date (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "End date (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Dashboard view loaded successfully"
                    },
                    "500": {
                        "description": "Server error while loading dashboard"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Visits",
            "description": "Visits"
        },
        {
            "name": "Dashboard",
            "description": "Dashboard"
        }
    ]
}