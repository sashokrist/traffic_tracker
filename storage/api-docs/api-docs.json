{
    "openapi": "3.0.0",
    "info": {
        "title": "Visits tracker System API",
        "version": "v1"
    },
    "paths": {
        "/api/track": {
            "get": {
                "tags": [
                    "Visits"
                ],
                "summary": "Track a page visit",
                "description": "Tracks visits and logs them with geo location",
                "operationId": "trackVisit",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Full page URL",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Visit logged successfully"
                    },
                    "400": {
                        "description": "Missing or invalid page parameter"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Visits",
            "description": "Visits"
        }
    ]
}